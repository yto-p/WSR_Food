<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">#000000</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorDefault</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="LoginTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:statusBarColor">@color/colorDefault</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">#000000</item>
    </style>
</resources>